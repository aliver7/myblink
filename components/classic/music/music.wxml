<view class="container" hidden="{{hidden}}">
  <image class="{{isPlay?'img rotation':'img'}}" src="{{img}}"></image>
  <image class="play-img" src="{{isPlay?pauseImg:playImg}}" bind:tap="onPlay"></image>
  <image class="tag" src="images/music@tag.png"></image>
  <text class="content">{{content}}</text>
</view>