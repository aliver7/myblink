.preview-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  height: 420rpx;
  width: 320rpx;
  background: #fff;
}

.header {
  width: 280rpx;
  display: flex;
  justify-content: space-between;
}

.img-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.img-rectangle {
  width: 320rpx;
  height: 200rpx;
}

.summary {
  font-size: 28rpx;
  color: #999;
  padding: 0 20rpx;
}
